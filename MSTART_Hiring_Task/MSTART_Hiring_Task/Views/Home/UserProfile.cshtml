@model UserProfileViewModel
@{
    ViewData["Title"] = "UserProfile";
}


<section>
    <div class="container py-5">
        <div class="row ">
            <div class="col-lg-4">
                <div class="card mb-4 bg-secondary">
                    <div class="card-body text-center">
                        <img src="@Url.Content(Model.EditUserProfile.ExistingImage)" alt="avatar" class="rounded-circle img-fluid" style="width: 150px;">
                        <h5 class="my-3">@Model.EditUserProfile.First_Name @Model.EditUserProfile.Last_Name</h5>
                        <p class="text-muted mb-1">@Model.EditUserProfile.UserName</p>
                        <p class="text-muted mb-4"></p>
                        <div class="d-flex justify-content-center mb-2">
                            <button type="button" class="btn btn-primary">Follow</button>
                            <button type="button" class="btn btn-outline-primary ms-1">Message</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="card mb-4 bg-secondary">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Full Name</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.EditUserProfile.First_Name @Model.EditUserProfile.Last_Name</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">User Name</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.EditUserProfile.UserName</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Email</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.EditUserProfile.Email</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Phone</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.EditUserProfile.Gender</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Mobile</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.EditUserProfile.PhoneNumber</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Address</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.EditUserProfile.Date_Of_Birth.Value.ToString("dd-MM-yyyy")</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row g-4">
            <div class="col-sm-12">
                <div class="card bg-secondary rounded">
                    <div class="card-header">
                        <nav class="nav nav-borders">
                            <a class="nav-link " onclick="showUpdateProfileForm()" class="nav-link">Update Profile </a>
                            <a class="nav-link" onclick="showChangePasswordForm()" class="nav-link">Change Password</a>
                        </nav>
                    </div>
                    <div class="card-body">
                        @if (TempData["SuccessMessage"] != null)
                        {
                            <div class="col-sm-12 col-xl-12">
                                <div class="alert alert-success">
                                    @TempData["SuccessMessage"]
                                </div>
                            </div>
                        }
                        <form asp-action="UserProfile" id="updateProfileForm" enctype="multipart/form-data" method="post">
                            <div class="row g-3">
                                <div class="col form-floating mb-3">
                                    <input type="email" class="form-control" asp-for="EditUserProfile.Email">
                                    <label for="floatingInput" asp-for="EditUserProfile.Email"></label>
                                    <span class="text-danger" asp-validation-for="EditUserProfile.Email"></span>
                                </div>
                                <div class="col form-floating mb-3">
                                    <input type="text" class="form-control" asp-for="EditUserProfile.UserName">
                                    <label for="floatingInput" asp-for="EditUserProfile.UserName"></label>
                                    <span class="text-danger" asp-validation-for="EditUserProfile.UserName"></span>
                                </div>
                            </div>
                            <div class="row g-3">
                                <div class="col form-floating mb-3">
                                    <input type="text" class="form-control" asp-for="EditUserProfile.First_Name">
                                    <label for="floatingInput" asp-for="EditUserProfile.First_Name"></label>
                                    <span class="text-danger" asp-validation-for="EditUserProfile.First_Name"></span>
                                </div>
                                <div class="col form-floating mb-3">
                                    <input type="text" class="form-control" asp-for="EditUserProfile.Last_Name">
                                    <label for="floatingInput" asp-for="EditUserProfile.Last_Name"></label>
                                    <span class="text-danger" asp-validation-for="EditUserProfile.Last_Name"></span>
                                </div>
                            </div>
                            <div class="row g-3">
                                <div class="col form-floating mb-3">
                                    <input type="date" class="form-control" asp-for="EditUserProfile.Date_Of_Birth">
                                    <label for="floatingInput" asp-for="EditUserProfile.Date_Of_Birth"></label>
                                    <span class="text-danger" asp-validation-for="EditUserProfile.Date_Of_Birth"></span>

                                </div>
                                <div class="col form-floating mb-3">
                                    <input type="text" class="form-control" asp-for="EditUserProfile.PhoneNumber">
                                    <label for="floatingInput" asp-for="EditUserProfile.PhoneNumber"></label>
                                    <span class="text-danger" asp-validation-for="EditUserProfile.PhoneNumber"></span>
                                </div>
                            </div>
                            <div class="row g-3">
                                <div class="col  mb-3">
                                    <input class="form-control form-control-lg bg-dark" type="file" class="form-control" asp-for="EditUserProfile.PictureProfile">
                                    <span class="text-danger" asp-validation-for="EditUserProfile.PictureProfile"></span>
                                </div>
                                <div class="col form-floating mb-3">
                                    @Html.DropDownList("Gender", Html.GetEnumSelectList<Gender>(), "--Choose Gender --", new { @class = "form-select " })
                                    <label for="floatingSelect" asp-for="EditUserProfile.Gender"></label>
                                    <span class="text-danger" asp-validation-for="EditUserProfile.Gender"></span>
                                </div>
                            </div>
                            <button class="btn btn-lg btn-success m-2 " type="submit">Update Profile</button>
                        </form>
                        <form id="changePasswordForm" asp-action="ChangePassword" method="post" asp-controller="Home" style="display:none;">
                            <div class="col form-floating mb-3">
                                <input type="password" class="form-control" asp-for="ChangePasswordViewModel.CurrentPassword">
                                <label for="floatingInput" asp-for="ChangePasswordViewModel.CurrentPassword"></label>
                                <span asp-validation-for="ChangePasswordViewModel.CurrentPassword" class="text-danger"></span>
                            </div>
                            <div class="col form-floating mb-3">
                                <input type="password" class="form-control" asp-for="ChangePasswordViewModel.NewPassword">
                                <label for="floatingInput" asp-for="ChangePasswordViewModel.NewPassword"></label>
                                <span class="text-danger" asp-validation-for="ChangePasswordViewModel.NewPassword"></span>
                            </div>
                            <div class="col form-floating mb-3">
                                <input type="password" class="form-control" asp-for="ChangePasswordViewModel.ConfirmNewPassword">
                                <label for="floatingInput" asp-for="ChangePasswordViewModel.ConfirmNewPassword"></label>
                                <span class="text-danger" asp-validation-for="ChangePasswordViewModel.ConfirmNewPassword"></span>
                            </div>
                            <button class="btn btn-lg btn-success m-2 " type="submit">Change Password</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>