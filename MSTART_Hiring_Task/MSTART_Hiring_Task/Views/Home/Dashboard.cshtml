
@{
    ViewData["Title"] = "Dashboard";
}


<!-- Sale & Revenue Start -->
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-6 col-xl-3">
            <div class="bg-secondary rounded d-flex align-items-center justify-content-between p-4">
                <i class="fa fa-user fa-3x text-primary"></i>
                <div class="ms-3">
                    <p class="mb-2">Total Users </p>
                    <h6 class="mb-0">@ViewBag.TotalUsers</h6>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-xl-3">
            <div class="bg-secondary rounded d-flex align-items-center justify-content-between p-4">
                <i class="fas fa-list-alt fa-3x text-primary"></i>
                <div class="ms-3">
                    <p class="mb-2">Total Accounts</p>
                    <h6 class="mb-0">@ViewBag.TotalAccounts</h6>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-xl-3">
            <div class="bg-secondary rounded d-flex align-items-center justify-content-between p-4">
                <i class="fas fa-list-alt fa-3x text-primary"></i>
                <div class="ms-3">
                    <p class="mb-2">Total Transactions</p>
                    <h6 class="mb-0">@ViewBag.TotalTransactions</h6>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-xl-3">
            <div class="bg-secondary rounded d-flex align-items-center justify-content-between p-4">
                <i class="fa fa-users fa-3x text-primary"></i>
                <div class="ms-3">
                    <p class="mb-2">Total Roles</p>
                    <h6 class="mb-0">@ViewBag.TotalRoles</h6>
                </div>
            </div>
        </div>
        @if (TempData["SuccessMessage"] != null)
        {
        <div class="col-sm-12 col-xl-12">
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        </div>
        }
    </div>
</div>
<!-- Sale & Revenue End -->

